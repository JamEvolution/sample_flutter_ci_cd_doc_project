      #     { "name" => "Platform", "value" => "Android" },
      #     { "name" => "Lane",     "value" => "dev"    }
      #   ],
      #   teams_url: ENV["TEAMS_WEBHOOK_URL"]
      # )
    rescue => e
      # teams(
      #   title:   "Firebase DaÄŸÄ±tÄ±mÄ± HatalÄ±",
      #   message: "Dev lane iÃ§in daÄŸÄ±tÄ±m BAÅARISIZ! Hata: #{e.message}",
