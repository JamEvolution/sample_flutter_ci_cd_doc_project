  desc "Version artÄ±rma"
  lane :bump_version do |options|
    begin
      Dir.chdir("../..") do
        # Mevcut versiyonu oku
        current_version = File.read("pubspec.yaml").match(/version:\s+([^\n]+)/)[1]
        version_parts = current_version.split("+")
        semantic_version = version_parts[0] # Ã¶rn: 1.0.0
        build_number = version_parts[1].to_i # Ã¶rn: 10
        
        # Build numarasÄ±nÄ± bir artÄ±r
        new_build_number = build_number + 1
        new_version = "#{semantic_version}+#{new_build_number}"
        
        sh("fvm flutter pub run build_runner build --delete-conflicting-outputs")
        
        # OS'a gÃ¶re farklÄ± sed komutu kullan
        if OS.mac?
          sh("sed -i '' 's/version: .*/version: #{new_version}/g' pubspec.yaml")
        else
          sh("sed -i 's/version: .*/version: #{new_version}/g' pubspec.yaml")
        end
        
        UI.message("Version gÃ¼ncellendi: #{new_version}")
      end
      # teams(
      #   title: "Versiyon GÃ¼ncelleme BaÅŸarÄ±lÄ±",
      #   message: "Yeni versiyon: #{new_version}",
      #   facts: [
      #     { "name" => "Platform", "value" => "Android" },
      #     { "name" => "Ä°ÅŸlem", "value" => "Version Bump" }
      #   ],
      #   teams_url: ENV["TEAMS_WEBHOOK_URL"]
      # )
    rescue => e
      # teams(
      #   title: "Versiyon GÃ¼ncelleme HatasÄ±",
      #   message: "Versiyon gÃ¼ncelleme iÅŸleminde hata: #{e.message}",
      #   facts: [
      #     { "name" => "Platform", "value" => "Android" },
      #     { "name" => "Ä°ÅŸlem", "value" => "Version Bump" }
      #   ],
      #   teams_url: ENV["TEAMS_WEBHOOK_URL"]
      # )
      raise e
    end
  end

