  desc "CI ortamÄ±nÄ± validate et (GitLab CI/CD iÃ§in)"
  lane :validate_environment do
    begin
      UI.message("ğŸ” CI environment validation baÅŸlÄ±yor...")
      
      # Flutter version check
      flutter_version = sh("fvm flutter --version --machine 2>/dev/null || flutter --version --machine", log: false).strip
      UI.success("âœ… Flutter version: #{JSON.parse(flutter_version)['flutterVersion']}")
      
      # Android SDK check
      android_home = ENV['ANDROID_HOME'] || ENV['ANDROID_SDK_ROOT']
      if android_home.nil? || android_home.empty?
        UI.user_error!("âŒ ANDROID_HOME or ANDROID_SDK_ROOT environment variable not set")
      end
      UI.success("âœ… Android SDK: #{android_home}")
      
      # Ruby and Bundler check
      ruby_version = sh("ruby --version", log: false).strip
      UI.success("âœ… Ruby: #{ruby_version}")
      
      bundler_version = sh("bundle --version", log: false).strip
      UI.success("âœ… Bundler: #{bundler_version}")
      
      # Firebase CLI check (optional)
      begin
        firebase_version = sh("firebase --version", log: false).strip
        UI.success("âœ… Firebase CLI: #{firebase_version}")
      rescue
        UI.important("âš ï¸  Firebase CLI not found - manual setup may be required")
      end
      
      # Environment variables check for CI
      if ENV['CI']
        required_vars = ['FIREBASE_CLI_TOKEN']
        missing_vars = required_vars.select { |var| ENV[var].nil? || ENV[var].empty? }
        
        if missing_vars.any?
          UI.user_error!("âŒ Missing required environment variables: #{missing_vars.join(', ')}")
        end
        UI.success("âœ… Required CI environment variables are set")
      end
      
      UI.success("ğŸ‰ CI environment validation completed successfully!")
      
    rescue => e
      UI.error("âŒ Environment validation failed: #{e.message}")
      raise e
    end
  end
end
